<div class="form-wrap">
  <%= form_tag user_bookmarks_path(current_user) do %>

    <div>
      <%= hidden_field_tag :user_id, current_user.id  %>
    </div>

    <div>
      <%= label_tag :title, "Title" %>
      <%= text_field_tag :title %>
    </div>

    <div>
      <%= label_tag :description, "Description" %>
      <%= text_area_tag :description %>
    </div>

    <% if params[:gif_id] %>
      <div>
        <img src="<%= params[:gif_id] %>" width="300"><br>
        <%= label_tag :gif_url, "URL" %>
        <%= text_field_tag :gif_url, params[:gif_id] %>
      </div>
    <% else%>
      <div>
        <%= label_tag :gif_url, "Paste URL Here" %>
        <%= text_field_tag :gif_url %>
      </div>
    <% end %>

    <div>
      <%= label_tag :tag, "Add tags" %>
      <%= text_field_tag :tag %>
    </div>

    <div>
      <%= submit_tag %>
    </div>

  <% end %>
</div>

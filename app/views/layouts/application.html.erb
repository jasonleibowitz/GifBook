<!DOCTYPE html>
<html>
<head>
  <title>GifBook</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" href="css/bootstrap-theme.css">
</head>
<body>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
  <script src="js/bootstrap.min.js"></script>
  <div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <div class="navbar-brand"><a href="<%= root_path %>">GifBook</a>
        </div> <!-- END NAVBAR_BRAND -->
      </div> <!-- END NAVBAR-HEADER -->
      <div class="navbar-collapse collapse" role="navigation">
        <ul class="nav navbar-nav">
          <% unless current_user %>
            <li><%= link_to "sign up", new_user_path %></li>
            <li><%= link_to "login", login_path %></li>
            <li><%= render "form" %></li>
          <% else %>
            <li><%= link_to "news feed", welcome_index_path %></li>
            <li><%= link_to "my profile", user_path(current_user) %></li>
            <li><%= link_to "add a fresh gif", new_user_bookmark_path(current_user) %></li>
            <li><%= link_to "logout", logout_path %></li>
            <li><%= render "form" %></li>
          <% end %>
        </ul>
      </div> <!-- END NAVBAR-COLLAPSE COLLAPSE -->
    </div> <!-- END CONTAINER -->
  </div> <!-- END NAVBAR NAVBAR_INVERSE -->
  <div class="container theme-showcase" role="main">
<%= yield %>
  </div>
</body>
</html>
